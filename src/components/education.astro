---
import Image from "astro/components/Image.astro";
import collegeLogo from "../data/djsce-logo.webp";
---

<div class="bg-[#171717] group shadow-lg rounded-lg border border-slate-300 hover:border-cyan-300 align-start flex-none h-[11rem] w-[31rem] p-4 justify-start transform transition-all duration-200 ease-in-out">
    <p class="italic font-light ">education</p>
    <div class="flex">
        <div class="w-[20%] flex justify-center items-center">
            <Image src={collegeLogo} alt="djsce-logo" class="grayscale-100 select-none transition-all transform duration-200 group-hover:grayscale-0" loading="eager" />
        </div>
        <div class="text-right font-light w-[80%]">
            <p>Dwarkadas J. Sanghvi College of Engineering</p>
            <p class="italic text-sm">Bachelor of technology in <br>
            Artificial Intelligence and Machine Learning, <br>
            Honours in AI in Finance</p>
            <p class="italic text-sm">2024 - 2028</p>
        </div>
    </div>
</div>