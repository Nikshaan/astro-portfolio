---
interface Props {
    body?: string;
    title?: string;
    class?: string;
}

const { body, title } = Astro.props;
---

<div class={`bg-neutral-50 dark:bg-[#171717] group shadow-sm rounded-3xl border border-white dark:border-white/20 flex flex-col p-6 transition-all duration-300 ease-in-out h-full w-full github-contributions-card ${Astro.props.class || ''}`}>
<style>
  .github-contributions-card {
    transition: border-color 0.3s ease;
  }

  [data-theme="light"] .github-contributions-card {
    background-color: #dbeafe !important;
    border-color: #93c5fd !important;
  }
  
  .github-contributions-card:hover {
    border-color: #c084fc !important;
  }
  
  html[data-theme="light"] .github-contributions-card:hover {
    border-color: #1e3a8a !important;
  }
</style>
    {title && <h2 class="italic mb-2 font-bold text-xl">{title}</h2>}
    {body && <p class="m-0 font-light text-base flex flex-col">{body}</p>}
    <slot />
</div>