---
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/global.css';
import Navbar from '../components/navbar.astro';
import Intro from '../components/intro.astro';
import Education from '../components/education.astro';
import Extracurr from '../components/extracurr.astro';
import Location from '../components/location.astro';
import Modecard from '../components/modecard.astro';
import Stackcard from '../components/stackcard.astro';
import Filler from '../components/filler.astro';
import projects from "../data/projects.json";
import Projectcard from '../components/projectcard.astro';
---

<MainLayout title='Nikshaan | Portfolio' description='I am a developer based in Mumbai, India. I am passionate about machine learning, deep learning and web development. This portfolio is made using astro and has a bento box style.'>
	<main class="grid-bg bg-[#111111] text-neutral-50 min-h-[100svh] w-full p-2 flex items-center flex-col">
    <Navbar />
    <section id="home" class="h-full mt-10 p-2 flex flex-col lg:flex-row gap-2 flex-1">
      <div class="flex flex-col gap-2 lg:min-h-[70svh]">
        <Intro />
        <Education />
        <Filler />
      </div>
      <div class="flex flex-col gap-2 lg:min-h-[70svh]">
        <div class="flex flex-col gap-2 lg:flex-row">
            <Location />
            <Modecard />
        </div>
        <Extracurr />
      </div>
      <div class="flex flex-col gap-2 lg:min-h-[70svh]">
        <Stackcard />
      </div>
    </section>
		<section id="projects" class="bg-[#111111] min-h-[100svh] w-[65rem] flex-1 m-auto mt-5">
        <div class="flex flex-col mt-5 pl-4 ml-1 lg:mt-0 lg:ml-3 lg:px-2 justify-start items-start">
          <div class="flex justify-between items-center w-full mb-5">
            <p class="text-xl font-medium">PROJECTS</p>
              <div class="flex gap-1">
                <p class="border border-white p-1 text-sm">Web development</p>
                <p class="border border-white p-1 text-sm">AI/ML</p>
              </div>
          </div>
          <div class="px-4 border-l">
              {
                projects.web_projects.map((project) => (
                  <Projectcard name = {project.name} techstack = {project.techstack} summary = {project.summary} github = {project.github} live = {project.live} />
                ))
              }
          </div>
        </div>
    </section>
    <section id="non_tech">

    </section>
	</main>
</MainLayout>

<style>
.grid-bg {
  position: relative;
  background-color: #111111; 
  background-image:
    linear-gradient(to bottom, rgba(17, 17, 17, 0.2),  rgb(17, 17, 17, 1) 40%),
    repeating-linear-gradient(
      to right,
      rgba(255,255,255,0.3) 0px,
      rgba(255,255,255,0.3) 1px,
      transparent 1px,
      transparent 80px
    ),
    repeating-linear-gradient(
      to bottom,
      rgba(255,255,255,0.3) 0px,
      rgba(255,255,255,0.3) 1px,
      transparent 1px,
      transparent 80px
    );
  background-size: auto, 80px 100%, 100% 80px;
  background-position: top left, top left, top left;
  background-repeat: no-repeat, repeat, repeat;
  -webkit-mask-image: linear-gradient(to bottom, rgba(17,17,17,1), rgba(17,17,17,1) 60%);
  mask-image: linear-gradient(to bottom, rgba(17,17,17,1), rgba(17,17,17,1) 60%);
}
</style>
