---
import { Tooltips } from "astro-tooltips";

interface Props {
    title: string;
    description: string;
    preloadImage?: string;
}

import beeImage from "../data/bee.avif";
import { getImage } from "astro:assets";
import "@fontsource/instrument-sans/400.css";
import "@fontsource/instrument-sans/500.css";
import "@fontsource/jetbrains-mono/400.css";
import "@fontsource/jetbrains-mono/500.css";
import VercelAnalytics from "../components/VercelAnalytics.astro";
import Footer from "../components/Footer";

const { title, description, preloadImage } = Astro.props;

const favicon = await getImage({
    src: beeImage,
    format: "png",
    width: 32,
    height: 32,
});
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href={favicon.src} />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta content={description} name="description" />
        <meta content={title} property="og:title" />
        <meta content={description} property="og:description" />
        <meta content="website" property="og:type" />
        <meta content="https://nikshaan.vercel.app" property="og:url" />
        <meta content="https://nikshaan.vercel.app/favicon.svg" property="og:image" />
        <meta content="1200" property="og:image:width" />
        <meta content="630" property="og:image:height" />
        <meta content="Nikshaan Portfolio" property="og:site_name" />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />

        <meta name="theme-color" content="#111111" media="(prefers-color-scheme: dark)" />
        <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)" />
        <meta name="color-scheme" content="dark light" />
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta
            name="apple-mobile-web-app-status-bar-style"
            content="black-translucent"
        />
        <meta name="apple-mobile-web-app-title" content="Nikshaan" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="canonical" href="https://nikshaan.vercel.app/" />
        <link rel="manifest" href="/manifest.json" />

        <link rel="preconnect" href="https://api.github.com" />
        <link rel="preconnect" href="https://ws.audioscrobbler.com" />
        <link rel="dns-prefetch" href="https://api.github.com" />
        <link rel="dns-prefetch" href="https://ws.audioscrobbler.com" />

        <link
            rel="preload"
            href="/api/github-contributions"
            as="fetch"
            crossorigin="anonymous"
        />

        {
            preloadImage && (
                <link
                    rel="preload"
                    as="image"
                    href={preloadImage}
                    fetchpriority="high"
                    type="image/avif"
                />
            )
        }

        <style is:inline>
            @font-face {
                font-family: 'Instrument Sans';
                font-display: swap;
            }
            @font-face {
                font-family: 'JetBrains Mono';
                font-display: swap;
            }
        </style>

        <Tooltips interactive={false} delay={[0, 50]} />

        <script is:inline>
            (function () {
                try {
                    var theme = localStorage.getItem("theme");
                    if (theme === "light") {
                        document.documentElement.setAttribute(
                            "data-theme",
                            "light",
                        );
                    }
                } catch (e) {}
            })();
        </script>
    </head>
    <body
        class="h-full bg-black text-neutral-50"
    >
        <a href="#me" class="skip-link">Skip to main content</a>
        <slot />
        <Footer client:idle />
        <VercelAnalytics />
        <script type="application/ld+json" set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "Person",
            "name": "Nikshaan Shetty",
            "url": "https://nikshaan.vercel.app",
            "jobTitle": "Developer",
            "sameAs": [
                "https://github.com/Nikshaan",
                "https://www.linkedin.com/in/nikshaan-shetty/"
            ],
            "knowsAbout": ["Machine Learning", "Deep Learning", "Web Development", "React", "Next.js", "Python"]
        })} />
    </body>
</html>

<style>
    body {
        background-color: #111111;
        overflow-x: hidden;
        transition:
            background-color 0.3s ease,
            color 0.3s ease;
        margin: 0;
        padding: 0;
    }

    [data-theme="light"] body {
        background-color: #ffffff;
        color: #000000;
    }
</style>

<script>
    async function initLenis() {
        const Lenis = (await import("lenis")).default;

        const lenis = new Lenis({
            duration: 1.2,
            easing: (t: number) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
            orientation: "vertical",
            gestureOrientation: "vertical",
            smoothWheel: true,
            wheelMultiplier: 1,
            touchMultiplier: 2,
            infinite: false,
            autoRaf: true,
        });

        (window as any).lenis = lenis;

        document.addEventListener("astro:before-swap", () => {
            lenis.destroy();
            delete (window as any).lenis;
        });
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initLenis);
    } else {
        initLenis();
    }
</script>
