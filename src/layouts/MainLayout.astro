---
import { Tooltips } from "astro-tooltips";

interface Props {
    title: string;
    description: string;
    preloadImage?: string;
}

import beeImage from "../data/bee.avif";
import { getImage } from "astro:assets";
import "@fontsource/instrument-sans/400.css";
import "@fontsource/instrument-sans/500.css";
import "@fontsource/jetbrains-mono/400.css";
import "@fontsource/jetbrains-mono/500.css";
import VercelAnalytics from "../components/VercelAnalytics.astro";

const { title, description, preloadImage } = Astro.props;

const favicon = await getImage({
    src: beeImage,
    format: "png",
    width: 32,
    height: 32,
});
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href={favicon.src} />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta content={description} name="description" />
        <meta content={title} property="og:title" />
        <meta content={description} property="og:description" />
        <meta content="website" property="og:type" />

        <meta name="theme-color" content="#111111" />
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta
            name="apple-mobile-web-app-status-bar-style"
            content="black-translucent"
        />
        <link rel="canonical" href="https://nikshaan.vercel.app/" />
        <link rel="manifest" href="/manifest.json" />

        <link rel="dns-prefetch" href="https://api.github.com" />
        <link rel="dns-prefetch" href="https://ws.audioscrobbler.com" />

        {
            preloadImage && (
                <link
                    rel="preload"
                    as="image"
                    href={preloadImage}
                    fetchpriority="high"
                    type="image/avif"
                />
            )
        }

        <style></style>

        <Tooltips interactive={false} delay={[0, 50]} />

        <script is:inline>
            (function () {
                try {
                    var theme = localStorage.getItem("theme");
                    if (theme === "light") {
                        document.documentElement.setAttribute(
                            "data-theme",
                            "light",
                        );
                    }
                } catch (e) {}
            })();
        </script>
    </head>
    <body
        class="h-full bg-black text-neutral-50 transition-colors duration-300"
    >
        <slot />
        <VercelAnalytics />
    </body>
</html>

<style>
    body {
        background-color: #111111;
        overflow-x: hidden;
        transition:
            background-color 0.3s ease,
            color 0.3s ease;
        margin: 0;
        padding: 0;
    }

    [data-theme="light"] body {
        background-color: #ffffff;
        color: #000000;
    }
</style>

<script>
    let lenisInitialized = false;

    async function initLenis() {
        if (lenisInitialized) return;

        const Lenis = (await import("lenis")).default;

        const lenis = new Lenis({
            duration: 1.2,
            easing: (t: number) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
            orientation: "vertical",
            gestureOrientation: "vertical",
            smoothWheel: true,
            wheelMultiplier: 1,
            touchMultiplier: 2,
            infinite: false,
        });

        (window as any).lenis = lenis;

        function raf(time: number) {
            lenis.raf(time);
            requestAnimationFrame(raf);
        }

        requestAnimationFrame(raf);
        lenisInitialized = true;

        document.addEventListener("astro:before-swap", () => {
            lenis.destroy();
            delete (window as any).lenis;
            lenisInitialized = false;
        });
    }

    function initLenisOnInteraction() {
        if (lenisInitialized) return;
        initLenis();

        ["scroll", "wheel", "touchstart", "keydown"].forEach((event) => {
            window.removeEventListener(event, initLenisOnInteraction);
        });
    }

    ["scroll", "wheel", "touchstart", "keydown"].forEach((event) => {
        window.addEventListener(event, initLenisOnInteraction, {
            passive: true,
            once: true,
        });
    });

    setTimeout(() => {
        if (!lenisInitialized) {
            initLenis();
        }
    }, 2000);
</script>
