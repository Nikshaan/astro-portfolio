---
import { Tooltips } from "astro-tooltips";

interface Props {
    title: string;
    description: string;
    preloadImage?: string;
}

const { title, description, preloadImage } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/astro-portfolio/public/favicon.svg"
        />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta content={description} name="description" />
        <meta content={title} property="og:title" />
        <meta content={description} property="og:description" />
        <meta content="website" property="og:type" />

        <meta name="theme-color" content="#111111" />
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta
            name="apple-mobile-web-app-status-bar-style"
            content="black-translucent"
        />
        <link
            rel="canonical"
            href="https://Nikshaan.github.io/astro-portfolio/"
        />
        <link rel="manifest" href="/astro-portfolio/manifest.json" />

        <link
            rel="preload"
            href="/astro-portfolio/node_modules/@fontsource/instrument-sans/files/instrument-sans-latin-400-normal.woff2"
            as="font"
            type="font/woff2"
            crossorigin
        />
        <link
            rel="preload"
            href="/astro-portfolio/node_modules/@fontsource/instrument-sans/files/instrument-sans-latin-500-normal.woff2"
            as="font"
            type="font/woff2"
            crossorigin
        />

        <link rel="dns-prefetch" href="https://api.github.com" />
        <link rel="dns-prefetch" href="https://ws.audioscrobbler.com" />

        {
            preloadImage && (
                <link
                    rel="preload"
                    as="image"
                    href={preloadImage}
                    fetchpriority="high"
                    type="image/avif"
                />
            )
        }

        <style>
            @font-face {
                font-family: "Instrument Sans";
                font-style: normal;
                font-display: swap;
                font-weight: 400;
                src: url("/astro-portfolio/node_modules/@fontsource/instrument-sans/files/instrument-sans-latin-400-normal.woff2")
                    format("woff2");
                unicode-range:
                    U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
                    U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191,
                    U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
            }
            @font-face {
                font-family: "Instrument Sans";
                font-style: normal;
                font-display: swap;
                font-weight: 500;
                src: url("/astro-portfolio/node_modules/@fontsource/instrument-sans/files/instrument-sans-latin-500-normal.woff2")
                    format("woff2");
                unicode-range:
                    U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
                    U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191,
                    U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
            }
            @font-face {
                font-family: "JetBrains Mono";
                font-style: normal;
                font-display: swap;
                font-weight: 400;
                src: url("/astro-portfolio/node_modules/@fontsource/jetbrains-mono/files/jetbrains-mono-latin-400-normal.woff2")
                    format("woff2");
                unicode-range:
                    U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
                    U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191,
                    U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
            }
            @font-face {
                font-family: "JetBrains Mono";
                font-style: normal;
                font-display: swap;
                font-weight: 500;
                src: url("/astro-portfolio/node_modules/@fontsource/jetbrains-mono/files/jetbrains-mono-latin-500-normal.woff2")
                    format("woff2");
                unicode-range:
                    U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
                    U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191,
                    U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
            }
        </style>

        <Tooltips interactive={false} delay={[0, 50]} />

        <script is:inline>
            (function () {
                try {
                    var theme = localStorage.getItem("theme");
                    if (theme === "light") {
                        document.documentElement.setAttribute(
                            "data-theme",
                            "light",
                        );
                    }
                } catch (e) {}
            })();
        </script>
    </head>
    <body
        class="h-full bg-black text-neutral-50 transition-colors duration-300"
    >
        <slot />
    </body>
</html>

<style>
    body {
        background-color: #111111;
        overflow-x: hidden;
        transition:
            background-color 0.3s ease,
            color 0.3s ease;
        margin: 0;
        padding: 0;
    }

    [data-theme="light"] body {
        background-color: #ffffff;
        color: #000000;
    }
</style>

<script>
    let lenisInitialized = false;

    async function initLenis() {
        if (lenisInitialized) return;

        const Lenis = (await import("lenis")).default;

        const lenis = new Lenis({
            duration: 1.2,
            easing: (t: number) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
            orientation: "vertical",
            gestureOrientation: "vertical",
            smoothWheel: true,
            wheelMultiplier: 1,
            touchMultiplier: 2,
            infinite: false,
        });

        (window as any).lenis = lenis;

        function raf(time: number) {
            lenis.raf(time);
            requestAnimationFrame(raf);
        }

        requestAnimationFrame(raf);
        lenisInitialized = true;

        document.addEventListener("astro:before-swap", () => {
            lenis.destroy();
            delete (window as any).lenis;
            lenisInitialized = false;
        });
    }

    function initLenisOnInteraction() {
        if (lenisInitialized) return;
        initLenis();

        ["scroll", "wheel", "touchstart", "keydown"].forEach((event) => {
            window.removeEventListener(event, initLenisOnInteraction);
        });
    }

    ["scroll", "wheel", "touchstart", "keydown"].forEach((event) => {
        window.addEventListener(event, initLenisOnInteraction, {
            passive: true,
            once: true,
        });
    });

    setTimeout(() => {
        if (!lenisInitialized) {
            initLenis();
        }
    }, 2000);
</script>
